# FX Trading System - Production Environment Configuration
# Generated on $(date)

# Environment
ENVIRONMENT=production

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=fx_trading
DB_USER=fx_user
DB_PASSWORD=$(cat deploy/ssl/secrets/db_password)

# Redis Configuration  
REDIS_PASSWORD=$(cat deploy/ssl/secrets/redis_password)

# OANDA API Configuration (FILL IN YOUR VALUES)
OANDA_API_KEY=your_oanda_api_key_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here
OANDA_ENV=practice

# Security Configuration
ENCRYPTION_KEY=$(cat deploy/ssl/secrets/encryption_key)
JWT_SECRET=$(cat deploy/ssl/secrets/jwt_secret)
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# Trading Configuration
TRADING_INITIAL_BALANCE=1000000
TRADING_MAX_POSITIONS=5
TRADING_MAX_EXPOSURE=500000
TRADING_MAX_DAILY_LOSS=50000
TRADING_MAX_DRAWDOWN=0.05
TRADING_MAX_RISK_PER_TRADE=0.02
TRADING_ALLOWED_SYMBOLS=USDJPY,EURJPY,EURUSD

# Grafana Configuration
GRAFANA_PASSWORD=$(cat deploy/ssl/secrets/grafana_password)
